<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.dong.gdg_testsample.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/editText_search"
        android:hint="검색어 입력"
        android:layout_alignParentTop="true"
        android:layout_width="256dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_search"
        android:layout_alignBottom="@id/editText_search"
        android:layout_toRightOf="@id/editText_search"
        android:text="검색"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/imageButton_searchStrClear"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_toLeftOf="@id/button_search"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_delete"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/editText_search">
    </ListView>

</RelativeLayout>
